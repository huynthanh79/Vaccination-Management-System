  <div class="content" style="margin: 100px 0; padding: 0">
    <div class="container about" style="margin-bottom: 100px;">
      <form method="POST" action="/injection-point/store" class="injection-point">
        <div class="row" style="justify-content: space-evenly;">
          <div class="col" style="margin-bottom:30px">
            <div class="form-injection">
              
              <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11;">
                <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true" style="background-color:aquamarine">
                    <div class="toast-header">
                      <img src="/img/logo_navbar.png" class="rounded me-2" alt="..." width="20" height="20">
                      <strong class="me-auto">Thông báo</strong>
                      
                      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                      Đã thêm thành công.
                    </div>
                </div>
              </div>
              
              <h3 style="text-align: center; margin-bottom: 70px;">Phiếu Chỉ Định Tiêm</h3>

              <h5>Thông tin khách hàng</h5>
              <select class='form-group form-control form-control-sm mt-3 mb-3' id="checkbox-select-IDKH-options" name='customerID' required='required'>
                  <option value=''>-- Chọn khách hàng --</option>
                  {{#each Customers}}
                      <option value='{{this.MAKH}}'>{{this.MAKH}}</option>
                  {{else}}
                      <option >Not found</option>
                  {{/each}}
              </select>
              <div class="mb-3">
                <label for="name" class="form-label">Họ Tên:</label>
                <input type="text" class="form-control" id="name-cus">
              </div>
              <div class="mb-3">
                <label for="identity-number" class="form-label">CMND</label>
                <input type="text" class="form-control" id="identity-number-cus">
              </div>
              <div class="mb-3">
                <label for="address" class="form-label">Địa chỉ:</label>
                <input type="text" class="form-control" id="address-cus">
              </div>

              <h5 style="margin-top:30px;">Thông Tin Tiêm</h5>
              <div class="col-3">
                <label for="vaccineName" class="form-label">*Chọn vắc xin</label>
                <select class='form-group form-control form-control-sm ' id="checkbox-select-vacxin-options" name='vacxinID' required='required'>
                    <option value=''>-- Chọn vắc xin tiêm --</option>
                    {{#each Vaccines}}
                        <option value='{{this.MAVC}}'>{{this.MAVC}}</option>
                    {{else}}
                        <option >Not found</option>
                    {{/each}}
                </select>
              </div>
              <div class="row mt-3">
                <div class="col-5 mb-3">
                  <label for="vaccineName" class="form-label">Tên vaccine</label>
                  <input type="text" class="form-control" id="name-vc">
                </div>
                <div class="col mb-3">
                  <label for="amountOfPackage" class="form-label">Mô tả</label>
                  <input type="text" class="form-control" id="discription-vc">
                </div>
              </div>

              <h5 style="margin-top:30px;">Thông tin khác</h5>
              <div class="row">
                <div class="col-3 mb-3">
                  <label for="injectionDate" class="form-label">Đã được tiêm từ ngày:</label>
                  <input type="date" class="form-control" id="injectionDate" name="injection_date" required>
                </div>
                <div class="col-3 mb-3">
                  <label for="serial" class="form-label">Số thứ tự:</label>
                  <input type="number" class="form-control" id="serial" name="serial" required>
                </div>
                <div class="col"></div>
              </div>
              
              
              <h5 style="margin-top:70px;">Kết luận</h5>
              <div class="form-check form-check-inline col-12">
                  <input class="form-check-input" type="radio" name="conclusion"
                      id="inlineRadio1" value="Đã đủ điều kiện tiêm chủng ngay" required>
                  <label class="form-check-label" for="inlineRadio1">
                    Đã đủ điều kiện tiêm chủng ngay
                  </label>
              </div>
              <div class="form-check form-check-inline col-12">
                  <input class="form-check-input" type="radio" name="conclusion"
                      id="inlineRadio1" value="Trì hoản tiêm, có đặc điểm bất thường" required>
                  <label class="form-check-label" for="inlineRadio1">
                    Trì hoản tiêm, có đặc điểm bất thường
                  </label>
              </div>
              
              <div class="form-check form-check-inline col-12">
                  <input class="form-check-input" type="radio" name="conclusion"
                      id="inlineRadio1" value="Không được phép tiêm vì có thể sinh phản ứng phụ mạnh" required>
                  <label class="form-check-label" for="inlineRadio1">
                    Không được phép tiêm vì có thể sinh phản ứng phụ mạnh
                  </label>
              </div>

              <div class="form-check form-check-inline col-12">
                  <input class="form-check-input" type="radio" name="conclusion"
                      id="inlineRadio1" value="Được phép tiêm nhưng bắt buộc phải theo dõi 1 tiếng sau tiêm" required>
                  <label class="form-check-label" for="inlineRadio1">
                    Được phép tiêm nhưng bắt buộc phải theo dõi 1 tiếng sau tiêm
                  </label>
              </div>

              <div class="mb-3" style="margin-top: 30px">
                <label for="descripttion" class="form-label" style="font-size: 22px; font-weight: 500">Mô tả</label>
                <textarea class="form-control" name="descripttion" cols="30" rows="8"></textarea>
              </div>

              <div class="row" style="margin-top: 80px">
                <div class="col">
                  <div class="mb-3" >
                    <p>Thời gian:...,Ngày...,Tháng...,Năm... </p>
                    <h5>Người thực hiện cấp</h5>
                  </div>
                </div>
                <div class="col">
                  <div class="mb-3">
                    <button class="btn btn-outline-success btn-signin" style="margin-top: 30px" type="submit">Lập phiếu</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
      <!-- content  -->
    </div>
